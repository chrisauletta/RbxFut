CREATE TABLE USUARIO (
  ID_USUARIO INT(4),
  LOGIN VARCHAR(30),
  SENHA VARCHAR(30),
  NOME_USUARIO VARCHAR(30),
  DEPARTAMENTO VARCHAR(30),
  ID_TIME INT (4),
  CONSTRAINT PK_ID_USUARIO PRIMARY KEY (ID_USUARIO),
  CONSTRAINT FK_ID_TIME_U FOREIGN KEY (ID_TIME)
  REFERENCES TIME(ID_TIME)
);

CREATE TABLE JOGADOR (
  ID_JOGADOR INT(3),
  NOME_JOGADOR VARCHAR(40),
  POSICAO VARCHAR(30),
  HABILIDADE INT(4),
  COINS_J INT(6)
);

CREATE TABLE TIME_JOG (
  ID_TIME INT(4),
  ID_JOGADOR INT(4),
  CONSTRAINT FK_TIMEJOG_TIME FOREIGN KEY (ID_TIME)
  REFERENCES ´TIME´(ID_TIME),
  CONSTRAINT FK_TIMEJOG_JOGADOR FOREIGN KEY (ID_JOGADOR)
  REFERENCES JOGADOR(ID_JOGADOR)
);
